@model IEnumerable<HR.PresentationsModel.Dots.Employee.EmployeeDto>

@{
    ViewBag.Title = "Index";
}


<div class="row gy-5 g-xl-8">
    <!--begin::Col-->
    <div class="col-xl-8">
        <!--begin::Tables Widget 3-->
        <div class="card card-xl-stretch mb-5 mb-xl-8">
            <!--begin::Header-->
            <div class="card-header border-0 pt-5">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label fw-bolder fs-3 mb-1">Employees List</span>
                    <span class="text-muted mt-1 fw-bold fs-7">Over @Model.Count() members</span>
                </h3>
                <div class="card-toolbar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover" title="Click to add a Employee">
                    <a href="#" class="btn btn-sm btn-light-primary" data-bs-toggle="modal" data-bs-target="#empform">
                        <!--begin::Svg Icon | path: icons/duotune/arrows/arr075.svg-->
                        <span class="svg-icon svg-icon-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1" transform="rotate(-90 11.364 20.364)" fill="black" />
                                <rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="black" />
                            </svg>
                        </span>
                        <!--end::Svg Icon-->New Employee
                    </a>
                </div>
            </div>
            <!--end::Header-->
            <!--begin::Body-->
            <div class="card-body py-3">
                <!--begin::Table container-->
                <div class="table-responsive">
                    <!--begin::Table-->
                    <table class="emp table table-row-dashed table-hover table-row-gray-300 align-middle gs-0 gy-4">
                        <!--begin::Table head-->
                        <thead>

                        <th class="min-w-100px">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="min-w-150px">
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th class="min-w-10px">
                            @Html.DisplayNameFor(model => model.CareerField.Name)
                        </th>
                        <th class="min-w-100px ">
                            @Html.DisplayNameFor(model => model.CompanyJob.Name)
                        </th>
                        <th class="min-w-10px text-end">
                            @Html.DisplayNameFor(model => model.Governorate.Name)
                        </th>
                        <th style="display: none"></th>

                        </tr>
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data="@Html.DisplayFor(modelItem => item.ID)">


                                    <td>
                                        <a href="#" class="text-dark fw-bolder text-hover-primary d-block fs-6">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#" class="text-dark fw-bolder text-hover-primary d-block fs-6">
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#" class="text-dark fw-bolder text-hover-primary d-block fs-6">
                                            @Html.DisplayFor(modelItem => item.CareerField.Name)
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#" class="text-dark fw-bolder text-hover-primary d-block fs-6">
                                            @Html.DisplayFor(modelItem => item.CompanyJob.Name)
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#" class="text-dark fw-bolder text-hover-primary d-block fs-6">
                                            @Html.DisplayFor(modelItem => item.Neighborhood.Name)
                                        </a>
                                        <span class="text-muted fw-bold text-muted d-block fs-7">
                                            @Html.DisplayFor(modelItem => item.Governorate.Name)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end flex-shrink-0">

                                            <a href="#" data-bs-toggle="modal" data-bs-target="#empform" onclick="EmpId(@Html.DisplayFor(modelItem => item.ID))" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
                                                <!--begin::Svg Icon | path: icons/duotune/art/art005.svg-->
                                                <span class="svg-icon svg-icon-3">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                        <path opacity="0.3" d="M21.4 8.35303L19.241 10.511L13.485 4.755L15.643 2.59595C16.0248 2.21423 16.5426 1.99988 17.0825 1.99988C17.6224 1.99988 18.1402 2.21423 18.522 2.59595L21.4 5.474C21.7817 5.85581 21.9962 6.37355 21.9962 6.91345C21.9962 7.45335 21.7817 7.97122 21.4 8.35303ZM3.68699 21.932L9.88699 19.865L4.13099 14.109L2.06399 20.309C1.98815 20.5354 1.97703 20.7787 2.03189 21.0111C2.08674 21.2436 2.2054 21.4561 2.37449 21.6248C2.54359 21.7934 2.75641 21.9115 2.989 21.9658C3.22158 22.0201 3.4647 22.0084 3.69099 21.932H3.68699Z" fill="black" />
                                                        <path d="M5.574 21.3L3.692 21.928C3.46591 22.0032 3.22334 22.0141 2.99144 21.9594C2.75954 21.9046 2.54744 21.7864 2.3789 21.6179C2.21036 21.4495 2.09202 21.2375 2.03711 21.0056C1.9822 20.7737 1.99289 20.5312 2.06799 20.3051L2.696 18.422L5.574 21.3ZM4.13499 14.105L9.891 19.861L19.245 10.507L13.489 4.75098L4.13499 14.105Z" fill="black" />
                                                    </svg>
                                                </span>
                                                <!--end::Svg Icon-->
                                            </a>
                                            <a href="#" onclick="del('/Employees/Delete',@Html.DisplayFor(modelItem => item.ID))" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm">
                                                <!--begin::Svg Icon | path: icons/duotune/general/gen027.svg-->
                                                <span class="svg-icon svg-icon-3">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                        <path d="M5 9C5 8.44772 5.44772 8 6 8H18C18.5523 8 19 8.44772 19 9V18C19 19.6569 17.6569 21 16 21H8C6.34315 21 5 19.6569 5 18V9Z" fill="black" />
                                                        <path opacity="0.5" d="M5 5C5 4.44772 5.44772 4 6 4H18C18.5523 4 19 4.44772 19 5V5C19 5.55228 18.5523 6 18 6H6C5.44772 6 5 5.55228 5 5V5Z" fill="black" />
                                                        <path opacity="0.5" d="M9 4C9 3.44772 9.44772 3 10 3H14C14.5523 3 15 3.44772 15 4V4H9V4Z" fill="black" />
                                                    </svg>
                                                </span>
                                                <!--end::Svg Icon-->
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                            }
                        </tbody>
                        <!--end::Table body-->
                    </table>
                    <!--end::Table-->
                </div>
                <!--end::Table container-->
            </div>
            <!--begin::Body-->
        </div>
        <!--end::Tables Widget 3-->
    </div>
    <!--end::Col-->
    <!--begin::Col-->
    <div class="col-xl-4">
        <!--begin::List Widget 1-->
        <div class="card card-xl-stretch mb-5 mb-xl-8">
            <!--begin::Header-->
            <div class="card-header border-0 pt-5">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label fw-bolder text-dark">Qualifications</span>
                    <span class="text-muted mt-1 fw-bold fs-7">Latest tech trends</span>
                </h3>
                
            </div>
            <!--end::Header-->
            <!--begin::Body-->
            <div class="card-body quallist pt-5">
              
            </div>
            <!--end::Body-->
        </div>
        <!--end::List Widget 1-->
    </div>
    <!--end::Col-->
</div>

<script>


    var chk = document.querySelectorAll(".emp tbody tr");

    for (i = 0; i < chk.length; i++) {
        chk[i].addEventListener("click", function () {
            for (i = 0; i < chk.length; i++) {
               
                chk[i].classList.remove("active")

                  
               
            }
            this.classList.add("active")
            $.ajax({
                url: "/Employees/GetEmpQuals",
                data: { id: this.getAttribute("data") }, //parameters go here in object literal form
                type: 'GET',
                datatype: 'json',
                success: function (data) {
                    //alert('got here with data');

                    $(".quallist").empty();
                    $.each(data, function (k, v) {

                     var selOpts = '<div class="d-flex align-items-sm-center mb-7"><div class="d-flex align-items-center flex-row-fluid flex-wrap"><div class="flex-grow-1 me-2"> <a href="#" class="text-gray-800 text-hover-primary fs-6 fw-bolder">' + v.Name; +'</a> </div></div></div><br/>'
                        $('.quallist').append(selOpts);

                    });
                },
                error: function () {
                    alert('something bad happened');
                }
            });

        });
    }

  </script>